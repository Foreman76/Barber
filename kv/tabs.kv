# -*- coding: utf-8 -*-

#:import Tab baseclas.tabs.Tab
#:import TabMasterDate baseclas.tabs.TabMasterDate


#*******************************************************************

<Tab>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(5)
        MDRoundFlatButton:
            id: text_date
            text: ''
            pos_hint: {'center_x':.5}
            size_hint_x: 1
            font_size: dp(15)
            on_release: app.update_date()
    BoxLayout:
        orientation: 'vertical'
        #size_hint_y: .4
        #pos_hint: {'center_x':.5, 'center_y':.5}
        spacing: dp(5)

        ScrollView:    
            do_scroll_x: False

            MDList:
                id: common_list
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(5)
        MDFillRoundFlatButton:
            text: 'Отправить заявку'
            pos_hint: {'center_x':.5}
            size_hint_x: 1
            #increment_width: dp(300)
            #size_hint: .8, None
            on_release: app.create_user_order()
           
#********************************************************************

<TabMasterDate>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)

        BoxLayout:
            size_hint_y: None
            height: dp(30)
            padding: dp(20)
            MDRaisedButton:
                id: text_date
                text: ''   
                font_style: 'H5'
                halign: 'center'
                pos_hint: {'y':1}
                on_release: app.update_date()
                bold: True

        ScrollView:
            id: scroll
            size_hint: 1, 1
            do_scroll_x: False

            MDList:
                id: common_list




<BarberTwoLineAvatarListItem>:
    id: twoline
    on_press: app.show_advanced_info(twoline.lservice_text)
    MyAvatar:
        source: "data/logo/kivy-icon-128.png"
    MyCheckbox:
        group: 'servicegroup'
        disabled: twoline.lcheckstatus
        on_active: app.on_checkbox_active_s(twoline.lid, *args)
        
<MasterTwoLineAvatarListItem>:
    id: mastertwoline
    on_press: app.show_advanced_info(mastertwoline.lmaster_text)
    MyAvatar:
        source: "data/logo/kivy-icon-128.png"
    MasterCheckbox:
        group: 'mastergroup'
        disabled: mastertwoline.lcheckstatus
        on_active: app.on_checkbox_active_m(mastertwoline.lid, *args)    

<TimeTwoLineAvatarListItem>:
    id: timetwoline
    
    MyAvatar:
        source: "data/logo/kivy-icon-128.png"
    TimeCheckbox:
        group: 'timegroup'
        disabled: timetwoline.lcheckstatus
        on_active: app.on_checkbox_active_t(timetwoline.lid, *args) 


<OrderLine>:
    id: ordertwoline
    
    MyAvatar:
        source: "data/logo/kivy-icon-128.png"