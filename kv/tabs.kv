# -*- coding: utf-8 -*-

#:import Tab baseclas.tabs.Tab

#*******************************************************************

<Tab>:
   
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        padding: dp(5)
        MDRoundFlatButton:
            id: text_date
            text: ''
            pos_hint: {'center_x':.5}
            increment_width: dp(164)
            font_size: dp(16)
            on_release: app.update_date()
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(5)

        ScrollView:    
            do_scroll_x: False

            MDList:
                id: common_list
    
           
#********************************************************************





<BarberTwoLineAvatarListItem>:
    id: twoline
    on_press: app.show_advanced_info(twoline.lservice_text)
    MyAvatar:
        source: app.directory+"/data/image/service.png"
    MyCheckbox:
        group: 'servicegroup'
        disabled: twoline.lcheckstatus
        on_active: app.on_checkbox_active_s(twoline.lid, *args)
        
<MasterTwoLineAvatarListItem>:
    id: mastertwoline
    on_press: app.show_advanced_info(mastertwoline.lmaster_text)
    MyAvatar:
        source: app.directory+"/data/image/master.png"
    MasterCheckbox:
        group: 'mastergroup'
        disabled: mastertwoline.lcheckstatus
        on_active: app.on_checkbox_active_m(mastertwoline.lid, *args)    

<TimeTwoLineAvatarListItem>:
    id: timetwoline
    
    MyAvatar:
        source: app.directory+"/data/image/time.png"
    TimeCheckbox:
        group: 'timegroup'
        disabled: timetwoline.lcheckstatus
        on_active: app.on_checkbox_active_t(timetwoline.lid, *args) 


<OrderLine>:
    id: ordertwoline
    
    MyAvatar:
        source: app.directory+"/data/image/order.png"