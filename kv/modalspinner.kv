<ModalSpinner>:
    size_hint_x: .8
    size_hint_y: None
    height: spinner.height+dp(20)
    background_color: 0, 0, 0, .1
    auto_dismiss: True

    MDCard:
        canvas:
            Color:
                rgba: app.theme_cls.primary_color
            Rectangle:
                size: self.size
                pos: self.pos
        Widget:
            size_hint_x: .1
        BoxLayout:
            padding: dp(0), dp(10)
            spacing: dp(20)
            
            MDSpinner:
                id: spinner
                size_hint: None, None
                size: dp(46), dp(46)
                pos_hint: {'center_x':.1,'center_y':.5}
                color: 1,1,1,1
                active: True

            MDLabel:
                id: label
                text: 'Загрузка...'
                markup: True
                valign: 'center'
                halign: 'center'
        Widget:
            size_hint_x: .2