# -*- coding: utf-8 -*-

<LoginScreen>:
    name: 'login'
    FitImage:
        source: app.directory+"/data/image/loginbg.png"
        opacity: .7 
    Image:
        source: app.directory+"/data/image/logo.png"
        pos_hint: {'center_x':.5,'center_y':.8}
        size_hint: .5,.5
       
    BoxLayout:
        orientation:'vertical'
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'center_y':.55}
        MDLabel:
            text: '[b]Barber Style[/b]'
            font_style: 'H4'
            halign: 'center'
            markup: True

    BoxLayout:
        orientation: "vertical"
        size_hint_y: None
        height: self.minimum_height
        pos_hint: {'center_x':.5, 'center_y':.4}
        spacing: 10
 
        MyTextField:
            #hint_text: "Телефон"
            id: tel_text
            text: '+7('
            helper_text: "Введите номер телефона по шаблону"
            helper_text_mode: "on_focus"
            pos_hint: {'center_x':.5}
            size_hint_x: .6
            halign: 'center'
            font_size: '18sp'
            color_mode: 'custom'
            line_color_focus: 0, 0, 0, 1
            line_color_normal: 0, 0, 0, 1

        MDRaisedButton:
            id: btn_reg
            text: 'Регистрация'
            #font_size: '18sp'
            pos_hint: {'center_x':.5}
            #text_color: 0, 0, 0, 1
            #md_bg_color: 1, 0,0,1
            on_press: app.registration(self.text)
        
           